<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoGallery.EditContactPage"
             Title="EditContactPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Entry x:Name="FirstEntry" Placeholder="Imię"/>
            <Entry x:Name="LastEntry" Placeholder="Nazwisko"/>
            <Entry x:Name="PhoneEntry" Placeholder="Telefon" Keyboard="Telephone"/>
            <Entry x:Name="PhotoEntry" Placeholder="Zdjęcie"/>
            <Button Text="Zapisz" Clicked="OnSaveClicked" BackgroundColor="Blue" TextColor="White"/>
            <Button Text="Anuluj" Clicked="OnCancelClicked" BackgroundColor="Gray" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>